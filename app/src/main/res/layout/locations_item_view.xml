<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_size_micro"
    app:cardBackgroundColor="@color/primary_dark"
    app:cardCornerRadius="@dimen/margin_padding_size_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_size_small">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_name"
            style="@style/textViewCharacterFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_type_label"
            style="@style/textViewCharacterFieldsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:text="Type:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_locations_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_type"
            style="@style/textViewCharacterFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_locations_type_label"
            tools:text="Type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_dimension_label"
            style="@style/textViewCharacterFieldsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:text="Dimension:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_locations_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_dimension"
            style="@style/textViewCharacterFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_locations_dimension_label"
            tools:text="Dimension" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_residents_label"
            style="@style/textViewCharacterFieldsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:text="Residents:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_locations_dimension" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_locations_residents"
            style="@style/textViewCharacterFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_locations_residents_label"
            tools:text="Residents" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>